{
  "name": "@querybuilder/mysql-tests",
  "version": "1.0.0",
  "description": "Test configuration for MySQL QueryBuilder module",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:driver": "jest mysql-driver.test.js",
    "test:integration": "jest mysql-integration.test.js",
    "test:extended": "jest mysql-extended.test.js",
    "test:all": "jest --runInBand"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "collectCoverageFrom": [
      "../**/*.js",
      "!../node_modules/**",
      "!../test/**",
      "!../coverage/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "verbose": true,
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"]
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "mysql2": "^3.0.0"
  }
}